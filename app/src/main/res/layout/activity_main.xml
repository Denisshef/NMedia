<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/barrierRecyclerView"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/post_view" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="contentEditText, edit_message_title" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_cancel_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:constraint_referenced_ids="icon_edit_message_cancel, edit_message_title, edit_message, cancel_edit, line_separator " />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edit_message_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:text="@string/edit_message"
        android:textColor="#005CB2"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/edit_message"
        app:layout_constraintEnd_toStartOf="@id/cancel_edit"
        app:layout_constraintStart_toEndOf="@id/icon_edit_message_cancel" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edit_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toTopOf="@id/contentEditText"
        app:layout_constraintEnd_toStartOf="@id/cancel_edit"
        app:layout_constraintStart_toEndOf="@id/icon_edit_message_cancel"
        tools:text="Text message" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/contentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/add_post"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/saveButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:inputType="textMultiLine"
        android:src="@drawable/add_file_24"
        app:layout_constraintBottom_toBottomOf="@id/contentEditText"
        app:layout_constraintEnd_toEndOf="@id/contentEditText"
        app:layout_constraintTop_toTopOf="@id/contentEditText" />

    <View
        android:id="@+id/line_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#c2c2c2"
        app:layout_constraintTop_toBottomOf="@id/edit_message" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_edit_message_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_32"
        app:layout_constraintBottom_toBottomOf="@id/edit_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrierRecyclerView" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/cancel_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:src="@drawable/ic_cancel_24"
        app:layout_constraintBottom_toBottomOf="@id/edit_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrierRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>

